    "info": {
        "description": "Read-only list of GPU offers. Updated hourly.",
        "title": "GPU Catalog API",
        "contact": {},
        "version": "1.0"
    },
    "basePath": "/",
    "paths": {
        "/gpus": {
            "get": {
                "description": "Returns a JSON array of GPU offers (read-only).",
                "produces": [
                    "application/json"
                ],
                "tags": [
                    "gpus"
                ],
                "summary": "List GPUs",
                "parameters": [
                    {
                        "type": "string",
                        "description": "Provider (e.g., vastai, tensordock, runpod)",
                        "name": "source",
                        "in": "query"
                    },
                    {
                        "type": "string",
                        "description": "Case-insensitive substring match",
                        "name": "location",
                        "in": "query"
                    },
                    {
                        "type": "number",
                        "description": "Max total_cost_ph",
                        "name": "max_price",
                        "in": "query"
                    },
                    {
                        "type": "number",
                        "description": "Min flops_per_dollar_ph",
                        "name": "min_flopsd",
                        "in": "query"
                    },
                    {
                        "type": "string",
                        "default": "updated_at.desc",
                        "description": "Column.direction (e.g., updated_at.desc)",
                        "name": "sort",
                        "in": "query"
                    },
                    {
                        "maximum": 1000,
                        "minimum": 1,
                        "type": "integer",
                        "default": 200,
                        "description": "Limit (1-1000)",
                        "name": "limit",
                        "in": "query"
                    },
                    {
                        "minimum": 0,
                        "type": "integer",
                        "description": "Offset for pagination",
                        "name": "offset",
                        "in": "query"
                    }
                ],
                "responses": {
                    "200": {
                        "description": "OK",
                        "schema": {
                            "type": "array",
                            "items": {
                                "$ref": "#/definitions/cmd_api.GPU"
                            }
                        }
                    },
                    "400": {
                        "description": "Bad request",
                        "schema": {
                            "type": "string"
                        }
                    },
                    "502": {
                        "description": "Upstream error",
                        "schema": {
                            "type": "string"
                        }
                    }
                }
            }
        },
        "/gpus/count": {
            "get": {
                "description": "Returns the total number of GPUs",
                "produces": [
                    "application/json"
                ],
                "tags": [
                    "gpus"
                ],
                "summary": "Count number of GPUs",
                "parameters": [
                    {
                        "type": "string",
                        "description": "Provider (e.g., vastai, tensordock, runpod)",
                        "name": "source",
                        "in": "query"
                    }
                ],
                "responses": {
                    "200": {
                        "description": "OK",
                        "schema": {
                            "type": "int"
                        }
                    },
                    "400": {
                        "description": "Bad request",
                        "schema": {
                            "type": "string"
                        }
                    },
                    "502": {
                        "description": "Upstream error",
                        "schema": {
                            "type": "string"
                        }
                    }
                }
            }
        }
    },
